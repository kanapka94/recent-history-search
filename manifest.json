{
  "manifest_version": 3,
  "name": "Recent Tabs Extension",
  "version": "1.0",
  "description": "Chrome extension for searching recently closed and history tabs with navigation using arrow keys.",
  "permissions": ["tabs", "history"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "navigateUp": {
      "suggested_key": {
        "default": "Alt+Up"
      },
      "description": "Navigate up in the list"
    },
    "navigateDown": {
      "suggested_key": {
        "default": "Alt+Down"
      },
      "description": "Navigate down in the list"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}
